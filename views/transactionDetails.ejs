<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Transaction Details</title>
  </head>
  <body>
    <div class="container">
    <h1>Transaction Details</h1>
    
      <table class="table table-sm table-bordered">
          <thead>
              <tr>
                  <th scope="col">Name</th>
                  <th scope="col">action</th>
                  <th scope="col">Action from</th>
                  <th scope="col">Amount</th>
              </tr>
          </thead>
          <tbody>
            <% for(i=0; i<data.details.length; i++) { %>
              <tr>
                  <th scope="row"><%= data.details[i].user.name %></th>
                  <td><%= data.details[i].action %></td>
                  <td>
                    <% if (data.details[i].sender) { %>
                      <%= data.details[i].sender.name %>
                    <% } else if (data.details[i].receiver) { %>
                      <%= data.details[i].receiver.name %>
                    <% } else if (data.details[i].details && data.details[i].details.game) { %>
                      <%= data.details[i].details.game.title %>
                    <% } %>
                  </td>
                  <td><%= data.details[i].amount %></td>
              </tr> 
            <% } %>
          </tbody>
          <tbody> 
            <tr class="text-justify">
                <th colspan="3" scope="row" style="text-align: end;">Balance</th>
                <td><%= data.balance %></td> 
            </tr>  
          </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>